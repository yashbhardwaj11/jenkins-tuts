pipeline {
    agent any
    stages {
        stage("Clone") {
            steps {
                echo "Cloning the code from GitHub."
            }
        }
        stage("Build") {
            steps {
                echo "Building the cloned code from GitHub."
            }
        }
        stage("Test") {
            steps {
                echo "Testing the code."
            }
        }
        stage("Deploy") {
            steps {
                echo "Deploying the application."
            }
        }
    }
}
